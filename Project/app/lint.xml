<?xml version="1.0" encoding="utf-8"?>
<lint>
    <!-- Regel: Methodenlänge nicht länger als 30 Zeilen -->
    <issue id="Override">
        <option name="max" value="30" />
    </issue>
 
    <!-- Regel: Namenskonventionen für Variablen und Methoden -->
    <issue id="FieldGetter">
        <option name="format" value="^[a-z][a-zA-Z0-9]*$" />
    </issue>
    <issue id="CheckResult">
        <option name="format" value="^[a-z][a-zA-Z0-9]*$" />
    </issue>
 
    <!-- Regel: PascalCase für öffentliche Properties in Java -->
    <issue id="ValidFragment">
        <option name="format" value="^[A-Z][a-zA-Z0-9]*$" />
    </issue>
</lint>